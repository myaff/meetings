.vb {
  &-dragger {
    z-index: 9;
    width: 6px;
    right: 0;

    &-styler {
      backface-visibility: hidden;
      transform: rotate3d(0,0,0,0);
      transition:
          opacity 100ms ease-out,
          margin 100ms ease-out,
          height 100ms ease-out;
      background: $color--black_light;
      margin: 2px 2px 2px 0;
      border-radius: 2px;
      height: calc(100% - 4px);
      display: block;
      opacity: 0;

      .vb-scrolling-phantom & {
        opacity: 0.3;
      }
      .vb-dragging &,
      .vb-dragging-phantom & {
        opacity: 0.5;
        margin: 0px;
        height: 100%;
      }
    }

    &:hover &-styler {
      opacity: 0.5;
      margin: 0px;
      height: 100%;
    }
  }

  &-visible &-content {
    margin-right: -17px;
  }
}