$text-color = $color--black_light;
$link-color = $text-color;
$link-color--active = $color--black;

html, body {
  font-size: $font-size-base;
  line-height: 1.5;
  font-family: $font-base;
  color: $text-color;
}

a {
  color: $link-color;
  text-decoration: none;

  {hover-focus-active} {
    color: $link-color--active;
  }

  &, & > * {
    {hover-focus-active} {
      outline: 0;
    }
  }

  p & {
    text-decoration underline
  }
}

.tp-heading {
  &--large {
    font: bold 48px $font-accent;
    h1& {
      font: inherit;
      margin 0
    }
  }
  &--big {
    &,
    h2&,
    h2 {
      font: bold 36px $font-accent;
    }
    h2& {
      margin 0
    }
    h2 {
      margin: 0;
    }
  }
  &--medium {
    &,
    h2&,
    h3&,
    h2, h3 {
      font: bold 24px/1.3 $font-accent;
    }
  }
  &--small {
    font: bold 16px/1.3 $font-accent;
  }
}
.tp-body {
  &--large {
    font: 32px/1.33 $font-base;
  }
  &--big {
    font: 24px/1.33 $font-base;
  }
  &--medium {
    font: 20px/1.2 $font-base;
  }
  &--base {
    font: 1rem/1.5 $font-base;
  }
  &--small {
    font: 14px/1.5 $font-base;
  }
  &--smaller {
    font: 12px/1.5 $font-base;
  }
}
b, strong {
  font: inherit;
  font-weight: bold;
}
.tp-text {
  for $align in (left right center) {
    &--{$align} {
      text-align: $align;
    }
  }
  &--light {
    opactiy: 0.8;
  }
  &--lighter {
    opacity: 0.6;
  }
  &--lightest {
    opacity: 0.5;
  }
  &--upper {
    text-transform: uppercase;
  }
  &--lower {
    text-transform: lowercase;
  }
  &--truncate {
    truncate();
  }
  &--nowrp {
    white-space: nowrap;
  }
}

.tp--label {
  display inline-block
  font-style italic;
  font-size: 14px;
  color: rgba($color--black_light, 0.8);
  background: $color--light;
  line-height 1;
  padding: 0.25em 0.5em;
  border-radius: 0.25em;
}

p {
  margin: 1em 0;
  no-childs-margin();
  max-width: 50em;
}

table {
  width: 100%;
  color: $color--black_light;

  th {
    padding: 32px 6px;
    text-align: center;
    
  }

  td {
    padding: 12px 6px;

    ^[0].tp-text--center & {
      text-align: center;
    }
  }

  &.striped {
    border-collapse: collapse;
    border: 0;
    thead,
    thead tr {
      background: $color--black_light;
    }
    th {
      background: $color--black_light;
      color: $color--grey_dark;
      font-weight: normal;
    }
    tr:nth-child(even) td {
      background: $color--light;
    }
    tr:nth-child(odd) td {
      padding: 20px 6px;
    }
  }
}

code {
  display block;
  margin: 1em 0 0.5em;

  &:first-child {
    margin-top: 0;
  }
}