.user-card {
  
  background: $color--white;
  box-shadow: 0 0 5px rgba($color--black, 0.1);
  border-radius: 4px;
  transition: box-shadow 0.3s;
  cursor pointer;

  &:hover {
    box-shadow: 0 0 10px rgba($color--black, 0.1);
  }

  &__content {
    padding: 20px;
    transform: translateZ(0);
  }

  &__name {
    
  }
}