@import "vue-datetime/dist/vue-datetime.css";
.base-datetime {
  &__label {
    display block
    font: $font-size-base/1 $font-base;
    margin-bottom: 0.5em;
    transform: translateZ(0);

    .required-star {
      color: $color--error;
    }
  }

  &__input {
    display block;
    width: 100%;
    box-sizing: border-box;
    border-radius: 4px;
    font: $font-size-base/1 $font-base;
    padding: 0.75em 1em;
    border: 1px solid $color--grey;
    box-shadow: inset 0 0 5px rgba($color--black, 0.1);
    background: $color--light;
  }

  .vdatetime-popup__actions {
    padding-top: 10px;
  }

  .vdatetime-popup__actions__button {
    font-family: $font-base;
    text-transform: uppercase;
    border-radius: 5px;
  }
  .vdatetime-popup__actions__button--confirm {
    // can't extend
    background: $color--primary;
    color: #fff;

    {hover-active} {
      background: darken($color--primary, 10%);
    }
  }
  .vdatetime-popup__actions__button--cancel {
    background: $color--grey_light;
    color: $color--black_light;
    border: 1px solid rgba($color--grey, 0.6);

    {hover-active} {
      background: darken($color--grey_light, 5%);
    }
  }
}